        </activity>
        <activity
            android:name=".activity.HeroDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MuseumDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MuseumActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RelicTypeActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RelicAbstractDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RelicDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.HeroActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RelicActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ExhibitionActivity"
            android:exported="true" />
        <activity
            android:name=".activity.HistoryActivity"
            android:exported="true"></activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>